<% layout("layouts/boilerplate") -%>
<div class="row">
  <div class="col-6 offset-3">
    <h1 class="mt-4 mb-5 text-center">All Blogs</h1>
    <%for (let blog of blogs) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title"><%=blog.title%></h5>
            <p class="text-muted"><%=blog.subtitle%></p>
            <a class="btn btn-primary" href="/blogs/<%=blog.id%>">View blog</a>
          </div>
        </div>
        <div class="col-4">
          <img
            class="img-thumbnail object-fit-cover h-100"
            src="http://127.0.0.1:3000/<%=blog.image.replace(/\\/g, '/')%>"
            height="400"
          />
        </div>
      </div>
    </div>
    <%}%>
  </div>
</div>
